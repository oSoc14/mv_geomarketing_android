<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profileImageFriend"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/butcher"/>

    <TextView
        android:id="@+id/profileNameFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samuel Vandecasteele"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/profileImageFriend" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/profileScoreFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="124"
        android:layout_alignTop="@+id/profileNameFriend"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp" />


</RelativeLayout>
