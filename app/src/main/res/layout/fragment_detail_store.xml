<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DetailCoupon">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:paddingTop="@dimen/padding_top"
            android:paddingBottom="@dimen/padding_bottom"
            android:background="@drawable/yellow"
            android:layout_weight="0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fries_shop"
                android:paddingBottom="5dp"
                android:id="@+id/imageViewDetailStore"
                android:paddingRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtTitleStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frituur Nadine"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageViewDetailStore"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/txtStoreDetailStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beste frieten van het stad"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@+id/imageViewDetailStore"
                android:layout_below="@+id/txtTitleStore"
                android:layout_toLeftOf="@+id/imageButton" />

        </RelativeLayout>



        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:enabled="true"
            android:id="@+id/myMapStore"
            android:apiKey="AIzaSyAg1Vf3WO0yqJj4gMsAUSzsQNl7XRPCo9w" />



</LinearLayout>
