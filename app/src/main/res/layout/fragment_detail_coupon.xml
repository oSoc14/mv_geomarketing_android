<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailCoupon">

    <!-- TODO: Update blank fragment layout -->
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >


        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment" />



        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fries_action"
            android:paddingBottom="5dp"
            android:id="@+id/imageViewDetailCoupon"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        
        
        <TextView
            android:id="@+id/txtTitleDetailCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EÃ©n pak kopen, frikandel gratis!"
            android:textSize="40dp"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewDetailCoupon" />
        
        <TextView
            android:id="@+id/txtStoreDetailCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frituur Nadine"
            android:textSize="30dp"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:layout_below="@+id/txtTitleDetailCoupon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/qr_code"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtStoreDetailCoupon"
            android:id="@+id/imageView2"
            android:layout_alignRight="@+id/txtStoreDetailCoupon"
            android:layout_alignEnd="@+id/txtStoreDetailCoupon" />



    </RelativeLayout>




</FrameLayout>
